<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/show_expense_card_design_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_toRightOf="@+id/show_expense_card_design_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/show_expence_card_desing_catagory_TV"
                android:textSize="15dp"
                android:textColor="#707070"/>


            <TextView
                android:layout_toLeftOf="@+id/show_expence_card_desing_time_TV"
                android:id="@+id/show_expence_card_desing_date_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="#707070"/>
            <TextView
                android:layout_toLeftOf="@+id/show_expence_card_desing_amount_TV"
                android:id="@+id/show_expence_card_desing_time_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#707070"/>
            <TextView

                android:id="@+id/show_expence_card_desing_amount_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_alignParentEnd="true"
                android:textColor="#707070"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>